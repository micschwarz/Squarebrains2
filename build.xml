<?xml version = "1.0"?>
<project name="Squarebrains" default="build">
    <target name="build">
        <mkdir dir="bin\production\Squarebrain"/>
        <javac srcdir="src"
               destdir="bin\production\Squarebrain"
        />
        <jar destfile="squarebrains.jar"
             basedir="bin\production\Squarebrain"
             manifest="src\META-INF\MANIFEST.MF">
        </jar>
    </target>
</project>